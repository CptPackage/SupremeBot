{
    "manifest_version": 2,
    "name" : "SupremeBot", 
    "version" : "0.5",
    
    "options_page": "options.html",
    "description" : "Supreme bot.",
    "background": {
        "scripts": ["background.js","js/jquery.min.js", "js/log.js"],
        "persistent": true
    },
    "permissions": [
        "webRequestBlocking",
        "webRequest",
        "tabs",
        "storage",
        "downloads",
        "https://*/*",
        "http://*/*",
        "*://*/*"
    ],
    "web_accessible_resources": [
        "https://www.supremecommunity.com/",
        "css/restyle-style.css",
        "img/banned.jpg"
    ],  
    "browser_action": {
        "default_title": "Supreme Bot",
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
    {
      "matches": [ "http://www.supremenewyork.com/shop/*","https://www.supremenewyork.com/*",  "https://www.supremecommunity.com/*" ],
      "js": [ "js/jquery.min.js", "background.js" , "js/log.js"]
    }
  ]
}