{
    "manifest_version": 2,
    "name" : "SupremeBot", 
    "version" : "1",
    
    "options_page": "options.html",
    "description" : "Supreme bot.",
    "background": {
        "scripts": ["js/jquery.min.js","background.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "https://www.supremecommunity.com/season/spring-summer2018/droplist/2018-03-01/"
    ],  
    "browser_action": {
        "default_title": "Supreme Bot",
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
    {
      "matches": [ "http://www.supremenewyork.com/shop/*" , "https://www.supremecommunity.com/*" ],
      "js": [ "js/jquery.min.js", "background.js" ],
      "css" : ["css/popup-style.css"],
            "html" : ["html/inject.html"],
	  "run_at": "document_end"
    }
  ]
}