{
    "manifest_version": 2,
    "name" : "SupremeBot", 
    "version" : "1.3",
    
    "options_page": "options.html",
    "description" : "Supreme bot.",
    "background": {
        "scripts": ["js/jquery.min.js","background.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "https://www.supremecommunity.com/" 
    ],  
    "browser_action": {
        "default_title": "Supreme Bot",
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "downloads",
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
    {
      "matches": [ "http://www.supremenewyork.com/shop/*","https://www.supremenewyork.com/*",  "https://www.supremecommunity.com/*" ],
      "js": [ "js/jquery.min.js", "background.js" ]
    }
  ]
}